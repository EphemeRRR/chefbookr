<div class="container">
  <div class="chef-main">
    <div class="chef-info">
      <div class="chef-image">
        <%= cl_image_tag @chef.photo_id.url(:thumnail), class: 'img-round' %>
      </div>
      <div class="chef-name">
        <h1><%= @chef.first_name %> <%= @chef.last_name %></h1>
      </div>
      <div class="chef-show-specialties">
      <h4><span class="label label-primary">French Cuisine</span></h4>
      </div>
      <div class="chef-bio">
        <h4>Bio</h4>
        <p><%= @chef.bio %></p>
      </div>
      <div class="chef-menus">
