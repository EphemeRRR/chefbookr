<div class="navbar-wagon navbar-fixed-top">
  <!-- Logo -->
  <%= link_to image_tag('logo.jpg'), root_path, class: "navbar-wagon-brand" %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Profile picture with dropdown list -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <% if current_chef %>
          <%= cl_image_tag current_chef.photo_id, class: 'avatar dropdown-toggle', :id => 'navbar-wagon-menu', "data-toggle" => 'dropdown', crop: :fill %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li><a href="#">Profile</a></li>
            <li><a href="#">Dashboard</a></li>
            <li><%= link_to "Logout", destroy_chef_session_path, method: :delete %></li>
          </ul>
        <% else %>
          <%= link_to "Login user", new_user_session_path, class: "navbar-wagon-link" %>
          <%= link_to "Login chef", new_chef_session_path, class: "navbar-wagon-link" %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><%= link_to "Login user", new_user_session_path %></li>
        <li><%= link_to "Login chef", new_chef_session_path %></li>
        <li><%= link_to "Signup", new_user_registration_path %></li>
      </ul>
    </div>
  </div>
</div>
